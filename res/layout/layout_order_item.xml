<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corners_white_bg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_repayment_category"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:background="@drawable/button_yuanjiao"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/app_white"
                android:textSize="@dimen/sp11"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户名称"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品价格"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分期金额"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_distribution_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现审批金额"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_blue_color"/>
            <TextView
                android:id="@+id/tv_reduce_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_blue_color"/>
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/reduce"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售姓名"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_sale_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售电话"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_sale_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请时间"
                android:textSize="@dimen/pass_font"
                android:textColor="@color/text_black_color"/>
            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textSize="@dimen/pass_font"
                android:textColor="@color/app_hint_text_color"/>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/app_view_color" />
        <LinearLayout
            android:id="@+id/ll_repayment_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款详情"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/pass_font"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/jiantou_right"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_supplement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/add_attach"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="补充影像"
                android:textColor="@color/app_white"
                android:background="@drawable/button_yuanjiao"
                />
            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="取消申请"
                android:textColor="@color/app_white"
                android:background="@drawable/corners_red_bg"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
