<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/SMS_important_inform"
        android:textColor="@color/app_red"
        android:textSize="@dimen/item_name" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="10dp"
        android:background="@color/app_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="短信验证码"
            android:textColor="@color/app_black"
            android:textSize="@dimen/item_name" />

        <EditText
            android:id="@+id/SMS_Verification"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical|left"
            android:hint="请输入短信验证码"
            android:singleLine="true"
            android:textColor="@color/app_black"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/item_name" />

        <TextView
            android:id="@+id/SMS_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right1"
            android:text="60s"
            android:textColor="@color/app_pass_color"
            android:textSize="@dimen/item_name" />
    </LinearLayout>

    <Button
        android:id="@+id/sms_sure"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_click_selector"
        android:text="确认"
        android:textColor="@color/app_white"
        android:textSize="@dimen/submit_font" />


</LinearLayout>
