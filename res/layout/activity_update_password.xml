<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/update_password_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/old_pws"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="20dp"
            android:background="@color/app_white"
            android:gravity="center_vertical|left"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin_left1"
            android:singleLine="true"
            android:textColor="@color/app_black"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/item_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:background="@color/color3" />


        <EditText
            android:id="@+id/new_pws"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/app_white"
            android:gravity="center_vertical|left"
            android:hint="请输入您的新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin_left1"
            android:singleLine="true"
            android:textColor="@color/app_black"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/item_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:background="@color/color3" />


        <EditText
            android:id="@+id/new_pws_ag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/app_white"
            android:gravity="center_vertical|left"
            android:hint="请确认您的新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin_left1"
            android:singleLine="true"
            android:textColor="@color/app_black"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/item_name" />


        <Button
            android:id="@+id/up_login_btn"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_click_selector"
            android:text="确定"
            android:textColor="@color/app_white"
            android:textSize="@dimen/submit_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_password_success_LL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/editpwsucc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="您的密码修改成功"
            android:textSize="@dimen/sp17" />

    </LinearLayout>

</LinearLayout>
